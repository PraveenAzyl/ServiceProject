@model CoreCodeAdmin.WEB.UI.Models.ForgotPasswordViewModel
@{


}

@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Forgate </b>Password</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Enter Mail id</p>


                <div class="form-group has-feedback">

                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })

                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                
                <div class="row">

                    <div class="col-sm-6">
                        <input type="submit" value="Done" class="form-control btn btn-success" />
                    </div>
                    <div class="col-sm-6">
                        <a href="@Url.Action("Index","Home")" class="form-control  btn btn-danger">Cancle</a>
                    </div>
                </div>

            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
}










@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
